<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="viewStart"
    tools:context=".StaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundColor"
        android:orientation="vertical"
        android:weightSum="15"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#00FFFFFF"
                app:srcCompat="@drawable/transformvisual" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:fontFamily="sans-serif-thin"
                android:gravity="center|right"
                android:text="현재루틴"
                android:textAlignment="center"
                android:textColor="@color/textA"
                android:textSize="24sp"
                android:textStyle="normal" />

            <View
                android:id="@+id/View"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/textA" />

            <TextView
                android:id="@+id/routine"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:fontFamily="@font/font"
                android:gravity="center|right"
                android:text="운동루틴 이름"
                android:textAlignment="center"
                android:textColor="#F24242"
                android:textSize="24sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:background="@color/textA" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:fontFamily="sans-serif-thin"
                android:gravity="center|right"
                android:text="다음 운동"
                android:textAlignment="center"
                android:textColor="@color/textA"
                android:textSize="24sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@color/textA" />

            <TextView
                android:id="@+id/afterTask"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:fontFamily="@font/font"
                android:gravity="center|right"
                android:text="afterTask"
                android:textAlignment="center"
                android:textColor="@color/textA"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:background="@color/textA" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_weight="5"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:fontFamily="sans-serif-thin"
                android:gravity="center|right"
                android:text="현재 운동"
                android:textAlignment="center"
                android:textColor="@color/textA"
                android:textSize="24sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@color/textA" />

            <TextView
                android:id="@+id/currentTask"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:fontFamily="@font/font"
                android:gravity="center|right"
                android:text="currentTask"
                android:textAlignment="center"
                android:textColor="@color/textA"
                android:textSize="36sp"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:background="@color/textA" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_weight="5"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical"
                android:weightSum="14">

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="sans-serif-thin"
                    android:text="   남은 시간"
                    android:textAlignment="viewStart"
                    android:textAllCaps="false"
                    android:textColor="#9B3131"
                    android:textIsSelectable="false"
                    android:textSize="25dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5"
                    android:orientation="horizontal"
                    android:weightSum="6">

                    <TextView
                        android:id="@+id/restTime"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:fontFamily="@font/font"
                        android:gravity="center|right"
                        android:text="10"
                        android:textAlignment="center"
                        android:textColor="@color/greeeen"
                        android:textSize="40sp" />

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        android:text="min"
                        android:textAlignment="center"
                        android:textColor="@color/reeeed"
                        android:textSize="24sp" />

                </LinearLayout>

                <View
                    android:id="@+id/view5"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="8dp"
                    android:background="@color/textA" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="sans-serif-thin"
                    android:text="   경과 시간"
                    android:textColor="#9B3131"
                    android:textSize="25sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/elapsedTime"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:fontFamily="@font/font"
                        android:gravity="center|right"

                        android:text="경과 시간"
                        android:textAlignment="center"
                        android:textColor="@color/greeeen"
                        android:textSize="40sp" />

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="min"
                        android:textAlignment="center"
                        android:textColor="@color/reeeed"
                        android:textSize="24sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ToggleButton
                    android:id="@+id/postBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="84dp"
                    android:layout_marginLeft="7sp"
                    android:layout_marginTop="80sp"
                    android:layout_weight="0"
                    android:background="@drawable/button_togle"
                    android:textOff=""
                    android:textOn="" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>